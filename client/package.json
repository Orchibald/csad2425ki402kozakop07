{
  "name": "arel",
  "private": true,
  "version": "1.0.0",
  "author": "Dmytro Hlukhenkyi",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "serve": "vite preview",
    "electron:pack": "electron-builder --dir",
    "electron:builder": "electron-builder",
    "test": "jest",
    "lint": "eslint src/App.jsx",
    "build:for:electron": "tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "npm run build:for:electron && npm run electron:builder"
  },
  "dependencies": {
    "@serialport/parser-readline": "^12.0.0",
    "cross-env": "^7.0.3",
    "minami": "^1.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serialport": "^12.0.0",
    "taffydb": "^2.7.3",
    "wait-on": "^8.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-react": "^7.25.7",
    "@eslint/js": "^9.11.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.0",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.11.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.4",
    "vite": "^5.4.8",
    "vite-plugin-electron": "^0.28.8"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/jest.mock.js"
    },
    "testEnvironment": "jest-environment-jsdom"
  },
  "build": {
    "appId": "com.devname.package",
    "productName": "ArEl",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
